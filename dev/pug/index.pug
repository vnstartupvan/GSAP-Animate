          li.item
            +link('#', '2 Bedrooms').item-link-category
          li.item
            +link('#', '1 Bedrooms').item-link-category

      +link('#', '')(data-wow-delay="1.2s").btn-more-news.btn-commom.wow.fadeindown

  section.section-vacation-ideas
