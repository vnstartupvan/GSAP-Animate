          input(type="text", value="24 Sept 2016")#datepicker
          .icon
      div(data-wow-delay=".6s").item-news.wow.fadeindown
        .desc.date-time
          input(type="text", value="10 Oct 2016")#datepicker02
          .icon
      div(data-wow-delay=".9s").item-news.wow.fadeindown.group-select
